<div class="login-banner">
  <h1 class="login-title">DOT</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "email",
                input_html: { autocomplete: "email", class: 'mb-4' } %>
    <%= f.input :password,
                required: false,
                placeholder: "password",
                input_html: { autocomplete: "current-password", class: 'mb-5' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'login-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
